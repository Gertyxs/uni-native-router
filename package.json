    "chalk": "^5.0.1",
    "conventional-changelog-cli": "^2.2.2",
    "cross-env": "^7.0.3",
    "enquirer": "^2.3.6",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-prettier": "^4.0.0",
    "fs-extra": "^10.1.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "minimist": "^1.2.6",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.63.0",
